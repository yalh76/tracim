backgroundColor = grey-hover
feedWidth = 800px
smallScreenFeedWidth = 400px

.feedItem
  background-color backgroundColor
  border borderStyle
  padding standardSpacing
  margin-bottom standardSpacing
  border-radius standardBorderRadius
  margin-inline-end auto
  margin-inline-start auto
  width feedWidth
  max-width 100%

  &__header
    align-items center
    display flex
    flex-direction row
    height 40px
    justify-content space-between
    margin-inline-end -10px

    &__icon
      font-size bigIconSize
      margin-inline-end standardSpacing
    &__title
      margin-inline-end auto
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      color fontColor
      & > a
        color inherit
        &:hover
          text-decoration underline fontColor
    &__right
      margin-inline-start standardSpacing
      text-align end
      align-items flex-end
    &__unavailable
      font-style italic
      padding-inline-end standardSpacing
    &__actionMenu
      &.dropdownMenuButton
        padding 0 (standardSpacing * 2)
        & i
          width auto
          margin 0
      &::after
        display none
      &__item
        padding standardSpacing
        border none
        & .iconbutton__text
          padding 0

    & .breadcrumbs
      position relative
      top 0
      left 0

  &__content
    background-color offWhite
    border-radius standardBorderRadius
    margin-top standardSpacing
    padding standardSpacing
    position relative
  
  &__preview
    box-sizing content-box
    overflow hidden
    max-height previewHeight

    &__overflowOverlay
      background-image:
        linear-gradient(to top, rgba(0, 0, 0, 0.25), transparent),
        radial-gradient(ellipse at bottom, rgba(0, 0, 0, 0.1), transparent)
      background-position bottom
      background-repeat no-repeat
      bottom 40px
      height 25%
      margin-inline-start - standardSpacing
      position absolute
      width 100%

  &__footer
    display flex
    
    &__left
      align-items center
      display flex
      flex 1
      flex-wrap auto
      justify-content flex-start
      overflow auto

      & .translateButton .iconbutton
        padding-top standardSpacing
        padding-inline-end 0
        padding-bottom standardSpacing
        padding-inline-start standardSpacing

    &__right
      align-items center
      display flex
      flex 1
      flex-wrap auto
      justify-content flex-end
      overflow auto

      & .buttonComments
        margin-top 0px
        margin-inline-end standardSpacing
        margin-bottom standardSpacing
        margin-inline-start 0px
      & .EmojiReactionButton__buttonpicker
        padding-top standardSpacing
        padding-inline-end textSpacing
        padding-bottom standardSpacing
        padding-inline-start 0
        margin-bottom standardSpacing
    &__comments
      margin-inline-start standardSpacing

  & .timeline
    width 100%
    height unset
  
  &__timeline
    &__texteditor.timeline__texteditor
      margin standardSpacing 0 0
    &__messagelist
      padding 0
    &__comment.sent
      margin-inline-end standardSpacing
  
  &__publication
    &__messagelist__item
      margin-bottom 0
    &.comment
      border 0
      &.sent, &.received
        margin 0

@media (max-width: max-sm)
  .feedItem__timeline__texteditor__advancedtext
    display none
